{
	"version": "2.0.0",
	"tasks":
	[
		{
			"label": "build-debug-make",
			"type": "shell",
			"command": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Debug && cmake --build build"
		},
		{
			"label": "release-compile-make",
			"type": "shell",
			"command": "cmake -S . -B bin -DCMAKE_BUILD_TYPE=Release && cmake --build bin"
		},
		{
			"label": "build-debug-ninja",
			"type": "shell",
			"command": "cmake -S . -B build -G Ninja -DCMAKE_BUILD_TYPE=Debug && cmake --build build",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "release-compile-ninja",
			"type": "shell",
			"command": "cmake -S . -B bin -G Ninja -DCMAKE_BUILD_TYPE=Release && cmake --build bin"
		}
	]
}
